<img src="/assets/trollo-white.svg" alt="trollo logo" class="trollo-form-logo">

<h2 class="form-heading" >Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="registration-form-contents">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "r-form-item", placeholder: "First Name"%>

      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "r-form-item", placeholder: "Last Name"%>

      <%= f.text_field :avatar, autofocus: true, autocomplete: "avatar", class: "r-form-item", placeholder: "Avatar URL"%>

      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "r-form-item", placeholder: "Email"%>


      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "r-form-item", placeholder: "Password (6 characters minimum)" %>


      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "r-form-item", placeholder: "Password Confirmation"%><%= f.submit "Sign up", class: "r-form-item user-submit user-signup" %>
    </div>

<% end %>


<div class="devise-links form-heading">
  <%= render "devise/shared/links" %>
</div>
